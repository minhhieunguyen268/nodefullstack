<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List User</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="user-infor-container">
          <form method="POST" action="/users/create-user">
            <div class="pt-3">
              <h3>Create a new user:</h3>
            </div>
            <div class="mb-3 mt-3 col-6">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                required
              />
            </div>
            <div class="col-6"></div>
            <div class="mb-3 col-6">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                name="password"
                class="form-control"
                id="password"
                required
              />
            </div>
            <div class="col-6"></div>
            <div class="mb-3 col-6">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                name="username"
                class="form-control"
                id="username"
                required
              />
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>


        
        <div class="user-table mt-3">
          <h3>Table users:</h3>
          <table class="table table-hover table-bordered">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Username</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% userList.forEach(function(item,index){ %>
              <tr>
                <th scope="row"><%= JSON.stringify(item.id) %></th>
                <td><%= JSON.stringify(item.email) %></td>
                <td><%= JSON.stringify(item.username) %></td>
                <td>
                  <form style='display:inline;' action="/update-user/<%= item.id %>" method="POST">
                    <button type="submit" class="btn btn-outline-warning">edit</button>
                  </form>

                  <form style='display:inline;' action="/delete-user/<%= item.id %>" method="POST">
                    <button type="submit" class="btn btn-outline-danger">delete</button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
